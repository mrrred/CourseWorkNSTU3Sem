<Window x:Class="CourseWork.Presentation.Views.Bus.BusEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork.Presentation.Views.Bus"
        xmlns:converters="clr-namespace:CourseWork.Presentation.Converters"
        mc:Ignorable="d"
        Title="Редактирование автобуса" 
        Height="600" 
        Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <converters:NullImageConverter x:Key="NullImageConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10 5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Гос. номер -->
        <TextBlock Grid.Row="0" Grid.Column="0" Text="Гос. номер:"/>
        <TextBox Grid.Row="0" Grid.Column="1" 
                 Text="{Binding Bus.GovernmentNumber, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Марка и модель -->
        <TextBlock Grid.Row="1" Grid.Column="0" Text="Марка и модель:"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Bus.BrandModel, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Вместимость -->
        <TextBlock Grid.Row="2" Grid.Column="0" Text="Вместимость (мест):"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding Bus.Capacity, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Год выпуска -->
        <TextBlock Grid.Row="3" Grid.Column="0" Text="Год выпуска:"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Text="{Binding Bus.YearOfManufacture, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Год кап. ремонта -->
        <TextBlock Grid.Row="4" Grid.Column="0" Text="Год кап. ремонта:"/>
        <TextBox Grid.Row="4" Grid.Column="1" 
                 Text="{Binding Bus.YearOfOverhaul, UpdateSourceTrigger=PropertyChanged}">
            <TextBox.ToolTip>
                <TextBlock Text="Оставьте пустым, если не было кап. ремонта"/>
            </TextBox.ToolTip>
        </TextBox>

        <!-- Пробег -->
        <TextBlock Grid.Row="5" Grid.Column="0" Text="Пробег (км):"/>
        <TextBox Grid.Row="5" Grid.Column="1" 
                 Text="{Binding Bus.MileageAtYearStart, UpdateSourceTrigger=PropertyChanged}"/>

        <!-- Фото -->
        <TextBlock Grid.Row="6" Grid.Column="0" Text="Фото:"/>
        <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal">
            <Button Content="Загрузить фото" 
                    Command="{Binding LoadImageCommand}"
                    ToolTip="Выбрать фото автобуса"/>
            <Button Content="Удалить фото" 
                    Command="{Binding RemoveImageCommand}"
                    Margin="10 0 0 0"
                    Visibility="{Binding Bus.PhotoPath, Converter={StaticResource NullToVisibilityConverter}}"
                    ToolTip="Удалить текущее фото"/>
        </StackPanel>

        <!-- Превью фото -->
        <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2" 
                BorderBrush="LightGray" BorderThickness="1" 
                Margin="5" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Image Source="{Binding Bus.PhotoPath, Converter={StaticResource NullImageConverter}}"
                   Width="300"
                   Height="200"
                   Stretch="Uniform"/>
        </Border>

        <!-- Кнопки -->
        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0 20 0 0">
            <Button Content="Сохранить" 
                    Command="{Binding SaveCommand}"
                    Width="100"
                    IsDefault="True"/>
            <Button Content="Отмена" 
                    Command="{Binding CancelCommand}"
                    Width="100"
                    Margin="10 0 0 0"
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>