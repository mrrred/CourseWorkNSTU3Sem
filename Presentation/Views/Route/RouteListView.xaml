<UserControl x:Class="CourseWork.Presentation.Views.Route.RouteListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="🗺️ Маршруты"
                   FontSize="20" FontWeight="Bold"
                   Margin="10"/>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10 0 10 10">
            <Button Content="Добавить маршрут"
                    Command="{Binding AddRouteCommand}"
                    Padding="10 5"/>
            <Button Content="Редактировать"
                    Command="{Binding EditRouteCommand}"
                    Padding="10 5"
                    Margin="10 0 0 0"/>
            <Button Content="Удалить"
                    Command="{Binding DeleteRouteCommand}"
                    Padding="10 5"
                    Margin="10 0 0 0"/>
            <Button Content="Просмотреть детали"
                    Command="{Binding ViewDetailsCommand}"
                    Padding="10 5"
                    Margin="10 0 0 0"/>
            <Button Content="Обновить"
                    Command="{Binding RefreshCommand}"
                    Padding="10 5"
                    Margin="20 0 0 0"/>
            <TextBlock Text="Поиск:"
                       VerticalAlignment="Center"
                       Margin="20 0 5 0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Width="200"
                     Margin="5 0 0 0"
                     Padding="5"
                     VerticalAlignment="Center">
                <TextBox.ToolTip>
                    <TextBlock Text="Поиск по шифру, начальному, конечному или промежуточным пунктам"/>
                </TextBox.ToolTip>
            </TextBox>
        </StackPanel>

        <!-- Список маршрутов -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding FilteredRoutes}"
                  SelectedItem="{Binding SelectedRoute}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Шифр"
                                    Binding="{Binding RouteCode}"
                                    Width="80"/>
                <DataGridTextColumn Header="Маршрут"
                                    Binding="{Binding RouteDisplay}"
                                    Width="200"/>
                <DataGridTextColumn Header="Время отправления"
                                    Binding="{Binding DepartureTimeDisplay}"
                                    Width="100">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Время в пути"
                                    Binding="{Binding TravelTimeDisplay}"
                                    Width="100">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Дни отправления"
                                    Binding="{Binding DepartureDaysDisplay}"
                                    Width="150"/>
                <DataGridTextColumn Header="Промежуточные пункты"
                                    Binding="{Binding IntermediatePoints.Count}"
                                    Width="100">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статус -->
        <StatusBar Grid.Row="3" Margin="10 5 10 10">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Всего маршрутов:"/>
                    <Run Text="{Binding TotalRouteCount, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Отображается:"/>
                    <Run Text="{Binding FilteredRouteCount, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>