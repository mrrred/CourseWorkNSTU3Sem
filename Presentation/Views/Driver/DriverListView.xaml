<UserControl x:Class="CourseWork.Presentation.Views.Driver.DriverListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="👤 Водители"
                   FontSize="20" FontWeight="Bold"
                   Margin="10"/>

        <!-- Панель инструментов -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10 0 10 10">
            <Button Content="Добавить водителя"
                    Command="{Binding AddDriverCommand}"
                    Padding="10 5"/>
            <Button Content="Редактировать"
                    Command="{Binding EditDriverCommand}"
                    Padding="10 5"
                    Margin="10 0 0 0"/>
            <Button Content="Удалить"
                    Command="{Binding DeleteDriverCommand}"
                    Padding="10 5"
                    Margin="10 0 0 0"/>
            <Button Content="Просмотреть детали"
                    Command="{Binding ViewDetailsCommand}"
                    Padding="10 5"
                    Margin="10 0 0 0"/>
            <Button Content="Обновить"
                    Command="{Binding RefreshCommand}"
                    Padding="10 5"
                    Margin="20 0 0 0"/>
            <TextBlock Text="Поиск:"
                       VerticalAlignment="Center"
                       Margin="20 0 5 0"/>
            <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                     Width="200"
                     Margin="5 0 0 0"
                     Padding="5"
                     VerticalAlignment="Center">
                <TextBox.ToolTip>
                    <TextBlock Text="Поиск по ФИО, табельному номеру или категории"/>
                </TextBox.ToolTip>
            </TextBox>
        </StackPanel>

        <!-- Список водителей -->
        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding FilteredDrivers}"
                  SelectedItem="{Binding SelectedDriver}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Табельный номер"
                                    Binding="{Binding PersonnelNumber}"
                                    Width="120"/>
                <DataGridTextColumn Header="ФИО"
                                    Binding="{Binding FullName}"
                                    Width="200"/>
                <DataGridTextColumn Header="Год рождения"
                                    Binding="{Binding BirthYear}"
                                    Width="80">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Возраст"
                                    Binding="{Binding Age}"
                                    Width="70">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Стаж"
                                    Binding="{Binding ExperienceDisplay}"
                                    Width="70">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Категория"
                                    Binding="{Binding LicenseCategory}"
                                    Width="70">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="Класс"
                                    Binding="{Binding DriverClassDisplay}"
                                    Width="60">
                    <DataGridTextColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.CellStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Статус -->
        <StatusBar Grid.Row="3" Margin="10 5 10 10">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Всего водителей:"/>
                    <Run Text="{Binding TotalDriverCount, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Отображается:"/>
                    <Run Text="{Binding FilteredDriverCount, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>